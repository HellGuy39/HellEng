            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/step1"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="true"
                android:checkable="true"
                app:cardElevation="10dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/tvStep1Tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?android:attr/textColor"
                        android:textSize="18sp"
                        android:text="Step 1" />

                    <TextView
                        android:id="@+id/tvStep1SecondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:text="Basic information for your test" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_baseline_edit_note_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTestId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="16"
                            android:hint="Test ID"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@drawable/ic_baseline_edit_note_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTestName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="16"
                            android:hint="Test Name"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="5dp">

                            <AutoCompleteTextView
                                android:id="@+id/timeDropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="8"
                                android:inputType="none"
                                android:hint="Time"
                                android:textColorHint="?android:attr/textColorSecondary" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <AutoCompleteTextView
